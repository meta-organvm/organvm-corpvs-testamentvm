---
import Base from '../layouts/Base.astro';
import landing from '../data/landing.json';
---
<Base title="Home">
  <section class="hero">
    <h1>ORGANVM</h1>
    <p class="subtitle">{landing.tagline}</p>
  </section>

  <section class="metric-grid">
    <div class="metric-card">
      <div class="value">{landing.metrics.total_repos}</div>
      <div class="label">Repositories</div>
    </div>
    <div class="metric-card">
      <div class="value">{landing.metrics.production_repos}</div>
      <div class="label">Production</div>
    </div>
    <div class="metric-card">
      <div class="value">{landing.metrics.operational_organs}</div>
      <div class="label">Organs</div>
    </div>
    <div class="metric-card">
      <div class="value">{landing.metrics.dependency_edges}</div>
      <div class="label">Dependency Edges</div>
    </div>
    <div class="metric-card">
      <div class="value">{landing.metrics.ci_workflows}</div>
      <div class="label">CI Workflows</div>
    </div>
    <div class="metric-card">
      <div class="value">{landing.metrics.sprints_completed}</div>
      <div class="label">Sprints</div>
    </div>
  </section>

  <section>
    <h2>The Eight Organs</h2>
    <div class="organ-grid">
      {landing.organs.map((organ: any) => (
        <div class="organ-card">
          <div class="organ-header">
            <span class="organ-badge" data-organ={organ.key.replace('ORGAN-', '').replace('META', 'Meta')}>{organ.key}</span>
            <strong>{organ.name}</strong>
            <span class="greek">({organ.greek})</span>
          </div>
          <p class="description">{organ.description}</p>
          <div class="meta">
            <span>{organ.repo_count} repos</span> ·
            <span>{organ.status}</span> ·
            <a href={`https://github.com/${organ.org}`}>GitHub</a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section>
    <h2>Sprint History</h2>
    <div class="timeline">
      {landing.sprint_history.map((sprint: any) => (
        <div class="timeline-item">
          <div class="date">{sprint.date}</div>
          <strong>{sprint.name}</strong>
          <p>{sprint.summary}</p>
        </div>
      ))}
    </div>
  </section>
</Base>

<style>
  .hero {
    padding: var(--space-xl) 0 var(--space-lg);
  }
  .hero h1 {
    font-size: 3.5rem;
    letter-spacing: 0.1em;
    margin: 0;
  }
  .subtitle {
    font-size: 1.15rem;
    color: var(--color-text-muted);
    max-width: 40rem;
  }
  .organ-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(18rem, 1fr));
    gap: var(--space-md);
    margin: var(--space-md) 0;
  }
  .organ-card {
    border: 1px solid var(--color-border-light);
    border-radius: 6px;
    padding: var(--space-md);
  }
  .organ-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }
  .greek {
    font-style: italic;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  .meta {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  .description {
    font-size: 0.9rem;
    margin-bottom: var(--space-sm);
  }
</style>
