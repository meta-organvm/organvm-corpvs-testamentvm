---
import Base from '../layouts/Base.astro';
import essays from '../data/essays.json';
---
<Base title="Essays" description="28 published essays documenting the build of an eight-organ creative-institutional system">
  <div class="content">
    <h1>Essays</h1>
    <p class="intro">
      {essays.total} essays (~111,000 words) published through
      <a href={essays.site_url}>ORGAN-V Public Process</a>,
      documenting every phase of building the eight-organ system in public.
    </p>
    <p class="feed-link">
      <a href={essays.feed_url}>Subscribe via RSS/Atom</a>
    </p>

    <div class="essay-list">
      {essays.essays.map((essay: any) => (
        <article class="essay-item">
          <time datetime={essay.date}>{essay.date}</time>
          <h3><a href={essay.url}>{essay.title}</a></h3>
        </article>
      ))}
    </div>
  </div>
</Base>

<style>
  .intro {
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
  }
  .feed-link {
    margin-bottom: var(--space-lg);
  }
  .feed-link a {
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }
  .essay-list {
    border-top: 1px solid var(--color-border-light);
  }
  .essay-item {
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--color-border-light);
  }
  .essay-item time {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  .essay-item h3 {
    margin: var(--space-xs) 0 0;
    font-size: 1.1rem;
  }
</style>
