---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'ORGANVM — Eight-Organ Creative-Institutional System' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <title>{title} — ORGANVM</title>
  <link rel="alternate" type="application/atom+xml" title="ORGANVM Essays" href="https://organvm-v-logos.github.io/public-process/feed.xml" />
</head>
<body>
  <div class="container">
    <nav>
      <ul>
        <li><a href="/" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}><strong>ORGANVM</strong></a></li>
        <li><a href="/projects/" aria-current={Astro.url.pathname.startsWith('/projects') ? 'page' : undefined}>Projects</a></li>
        <li><a href="/essays/" aria-current={Astro.url.pathname.startsWith('/essays') ? 'page' : undefined}>Essays</a></li>
        <li><a href="/architecture/" aria-current={Astro.url.pathname.startsWith('/architecture') ? 'page' : undefined}>Architecture</a></li>
        <li><a href="/dashboard/" aria-current={Astro.url.pathname.startsWith('/dashboard') ? 'page' : undefined}>Dashboard</a></li>
        <li><a href="/about/" aria-current={Astro.url.pathname.startsWith('/about') ? 'page' : undefined}>About</a></li>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <p>ORGANVM — 8 organs, 89 repositories, 28 essays, 10 sprints. Built with the AI-conductor methodology.</p>
      <p>
        <a href="https://github.com/meta-organvm">GitHub</a> ·
        <a href="https://organvm-v-logos.github.io/public-process/feed.xml">RSS</a> ·
        <a href="https://organvm-v-logos.github.io/public-process/">Public Process</a>
      </p>
    </footer>
  </div>
</body>
</html>

<style>
  @import '../styles/global.css';
</style>
